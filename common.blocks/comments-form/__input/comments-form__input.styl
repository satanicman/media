.comments-form__input
  display: block
  position: relative
  padding-bottom: 1px
  overflow: hidden
  margin-bottom: 30px
  .textarea__control,
  .input__control
    display: block
    width: 100%
    background: light-background
    border none
    outline 0
    position: relative
    z-index: 4
    color #424242
    font-family base-font-famely
    font-size em(16px)
    font-weight 400
    line-height 1
    padding-bottom: 20px
  &:before, &:after
    display: inline-block
    content: ''
    position: absolute
    z-index: 1
    width: 100%
    height: 100%
    right: 0
    top: 0
    background rgba(#000, .1)
    transition right .3s
  &:before
    background: #000
    right: 100%
    z-index: 2
  &.input_focused:before
    right: 0